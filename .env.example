# Environment Configuration for Tunnel API
# Copy this file to .env and adjust values

# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgres://tunnel:tunnel@localhost:5432/tunneldb?sslmode=disable

# JWT Configuration
JWT_SECRET=change-this-to-a-very-long-random-string-at-least-32-characters
JWT_ACCESS_TTL=60     # Access token TTL in minutes
JWT_REFRESH_TTL=7     # Refresh token TTL in days

# FRP Configuration
FRP_SERVER_ADDR=0.0.0.0
FRP_SERVER_PORT=7000
FRP_TOKEN=your-frp-secret-token-here

# Tunnel Configuration
MIN_PORT=20000
MAX_PORT=30000
MAX_TUNNELS=3
DOMAIN=eu.makoto.com.pl
REGION=eu
